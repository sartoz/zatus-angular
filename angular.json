{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "cli": {
        "packageManager": "pnpm",
        "cache": {
            "enabled": false
        }
    },
    "newProjectRoot": "projects",
    "projects": {
        "zatus": {
            "projectType": "library",
            "root": "projects/zatus",
            "sourceRoot": "projects/zatus/src",
            "prefix": "zat",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/zatus/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/zatus/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/zatus/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "projects/zatus/tsconfig.spec.json",
                        "polyfills": [
                            "zone.js",
                            "zone.js/testing"
                        ]
                    }
                }
            }
        },
        "zatus-docs": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "root": "projects/zatus-docs",
            "sourceRoot": "projects/zatus-docs/src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:application",
                    "options": {
                        "outputPath": "dist/zatus-docs",
                        "index": "projects/zatus-docs/src/index.html",
                        "browser": "projects/zatus-docs/src/main.ts",
                        "polyfills": [
                            "zone.js"
                        ],
                        "tsConfig": "projects/zatus-docs/tsconfig.app.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "projects/zatus-docs/src/favicon.ico",
                            "projects/zatus-docs/src/assets"
                        ],
                        "styles": [
                            "projects/zatus-docs/src/styles.scss",
                            "dist/zatus/styles/core/zatus-core.scss",
                            "dist/zatus/styles/themes/flat/zatus-flat-theme-dark.scss"
                        ],
                        "scripts": []
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "500kb",
                                    "maximumError": "1mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "2kb",
                                    "maximumError": "4kb"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "production": {
                            "buildTarget": "zatus-docs:build:production"
                        },
                        "development": {
                            "buildTarget": "zatus-docs:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "buildTarget": "zatus-docs:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "polyfills": [
                            "zone.js",
                            "zone.js/testing"
                        ],
                        "tsConfig": "projects/zatus-docs/tsconfig.spec.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "projects/zatus-docs/src/favicon.ico",
                            "projects/zatus-docs/src/assets"
                        ],
                        "styles": [
                            "projects/zatus-docs/src/styles.scss"
                        ],
                        "scripts": []
                    }
                }
            }
        }
    }
}
